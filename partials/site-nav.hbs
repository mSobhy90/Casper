<nav class="site-nav">
    <div class="site-nav-left">
        {{^is "home"}}
            {{#if @blog.logo}}
                <a class="site-nav-logo" href="{{@blog.url}}"><img class="author-profile-image" src="{{@blog.logo}}" alt="{{@blog.title}}" /></a>
            {{else}}
                <a class="site-nav-logo" href="{{@blog.url}}">{{@blog.title}}</a>
            {{/if}}
        {{/is}}
        {{#if @blog.navigation}}
            {{navigation}}
        {{/if}}
    </div>
    <div class="site-nav-right">
        <div class="social-links">
            {{#if @blog.facebook}}
                <a class="social-link social-link-fb" href="{{facebook_url @blog.facebook}}" target="_blank" rel="noopener">{{> "icons/facebook"}}</a>
            {{/if}}
            {{#if @blog.twitter}}
                <a class="social-link social-link-tw" href="{{twitter_url @blog.twitter}}" target="_blank" rel="noopener">{{> "icons/twitter"}}</a>
            {{/if}}
            <a class="social-link social-link-github" href="https://github.com/mSobhy90" target="_blank" rel="noopener">{{> "icons/github"}}</a>
            <a class="social-link social-link-linkedin" href="https://www.linkedin.com/in/msobhy90/" target="_blank" rel="noopener">{{> "icons/linkedin"}}</a>
            <a class="social-link social-link-instagram" href="https://www.instagram.com/msobhy90/" target="_blank" rel="noopener">{{> "icons/instagram"}}</a>
            <a class="social-link social-link-skype" href="skype:m_sobhy_90?chat" target="_blank" rel="noopener">{{> "icons/skype"}}</a>
        </div>
        {{#if @labs.subscribers}}
            <a class="subscribe-button" href="#subscribe">Subscribe</a>
        {{else}}
            <a class="rss-button" href="https://feedly.com/i/subscription/feed/{{@blog.url}}/rss/" target="_blank" rel="noopener">{{> "icons/rss"}}</a>
        {{/if}}
    </div>
</nav>
